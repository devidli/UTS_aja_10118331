<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/foto"
            android:layout_width="106dp"
            android:layout_height="137dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="136dp"
            android:layout_marginRight="136dp"
            android:backgroundTint="#FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/foto"
            tools:ignore="MissingConstraints" />

        <TextView
        android:layout_centerInParent="true"
        android:id="@+id/title_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto"
        android:layout_marginVertical="10dp"
        android:text="NIM"
            android:textAlignment="center"
        android:textSize="15sp"
            android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/nim"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_nim"
        android:text="10118331"
        android:textSize="20sp"
        android:layout_marginBottom="30dp" />
    <TextView
        android:id="@+id/title_nama"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nim"
        android:layout_marginVertical="10dp"
        android:text="Nama"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/nama"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_nama"
        android:text="Devidli Setiawan"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/title_kelas"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:layout_marginVertical="10dp"
        android:text="Kelas"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/kelas"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_kelas"
        android:layout_marginBottom="10dp"
        android:text="IF-8"
        android:textSize="20sp"
        android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

